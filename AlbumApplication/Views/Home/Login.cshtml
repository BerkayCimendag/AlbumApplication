
@model Admin



<div class="card-body">
    <form asp-action="Login" asp-controller="Home" method="post">
        <div class="form-group">
            <label asp-for="Username">Username: </label>
            <input asp-for="Username" type="text" class="form-control mb-2" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Password: </label>
            <input asp-for="Password" type="text" class="form-control mb-2" />
            <span asp-validation-for="Password" class="text-danger"></span>
            <span style="color:red">@(ViewBag.Situtation != null ? ViewBag.Situtation : "" )</span>
        </div>
        <button type="submit" class="btn btn-success mb-2">LOGIN</button>
        
    </form>
</div>